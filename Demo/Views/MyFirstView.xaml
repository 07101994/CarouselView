<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Demo.MyFirstView">

    <ScrollView>
    <StackLayout Padding="10">

		<Label TextColor="Black" Text="{Binding .}" HeightRequest="40" />
		<Entry Placeholder="Name" HeightRequest="40" />
		<Entry Placeholder="Age" HeightRequest="40" />
		<Button Text="Remove me!" HeightRequest="40" Clicked="RemoveMe"/>
		<Button Text="Remove next!" HeightRequest="40" Clicked="RemoveNext"/>

	</StackLayout>
	</ScrollView>

</ContentView>
